{
  "compilerOptions": {
    "module": "ES2020",                    
    "lib": ["DOM", "ES2020"],
    "moduleResolution": "node",
    "target": "ES2020",
    "outDir": "build",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "noEmit": true,
  "include": ["src/**/*.ts", "test/**/*.ts"]
}